{
    "name": "react-easy-flux",
    "version": "1.2.0",
    "description": "React binding for flux",
    "main": "index.js",
    "scripts": {
        "lint": "eslint ./src ./tests --ext .js --cache --ignore-pattern .gitignore",
        "lint:fix": "eslint ./src ./tests --ext .js --cache --ignore-pattern .gitignore --fix",
        "test": "jest",
        "cover:check": "jest --coverage",
        "codecov": "codecov -t $CODECOV_TOKEN",
        "precheck": "node ./tools/precheck.js",
        "clean": "node ./tools/clean.js",
        "release": "standard-version -t"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andres-kovalev/react-easy-flux.git"
    },
    "keywords": [
        "react",
        "flux"
    ],
    "engines": {
        "node": ">= 6.2.0"
    },
    "author": {
        "name": "Andres Kovalev",
        "email": "mail@akovalev.ru"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/andres-kovalev/react-easy-flux/issues"
    },
    "homepage": "https://github.com/andres-kovalev/react-easy-flux#readme",
    "peerDependencies": {
        "react": "^16.8.0"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.2",
        "codecov": "^3.2.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "eslint": "^5.15.3",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.2",
        "husky": "^1.3.1",
        "jest": "^24.8.0",
        "react-dom": "^16.8.0",
        "standard-version": "^7.0.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js",
            "src/**/*.jsx"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tools/jest.config.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        }
    },
    "dependencies": {
        "prop-types": "^15.7.2"
    },
    "standard-version": {
        "header": "Package changelog",
        "types": [
            {
                "type": "feat",
                "section": "Features"
            },
            {
                "type": "fix",
                "section": "Bug Fixes"
            },
            {
                "type": "chore",
                "hidden": true
            },
            {
                "type": "docs",
                "hidden": true
            },
            {
                "type": "style",
                "hidden": true
            },
            {
                "type": "refactor",
                "section": "Improvements"
            },
            {
                "type": "perf",
                "section": "Improvements"
            },
            {
                "type": "test",
                "hidden": true
            }
        ]
    }
}
